<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/apodListFragment">

    <fragment
        android:id="@+id/apodListFragment"
        android:name="com.abir.hasan.apod.ui.apodlist.APODListFragment"
        android:label="@string/our_universe"
        tools:layout="@layout/fragment_apod_list">
        <action
            android:id="@+id/action_apodListFragment_to_apodDetailsFragment"
            app:destination="@id/apodDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/apodDetailsFragment"
        android:name="com.abir.hasan.apod.ui.apoddetails.APODDetailsFragment"
        android:label="@string/our_universe"
        tools:layout="@layout/fragment_apod_details" />

</navigation>